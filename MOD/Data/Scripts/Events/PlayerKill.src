#include "include\AIM.cpp"

void proc OnPlayerKill(char gliderID)
{
		//---Событие срабатывает когда убивают глайдер во время прохождения Генерируемого квеста---//
	int iGenQ;
	iGenQ = GetVar("gen_q");
	if (iGenQ>0 && GetVarChar("g_glidertarget") == gliderID)
	{
		if (iGenQ == 6 )
		{
			SetVar("g_gliderdie", 1);
			Text("INT_QUEST_COMPLETE");
			StopTimer("endtime");			
		}
	}

	if (!GetVar("DEMO"))
		StartScriptEvent("Clans\Events\PlayerKill.src", "OnPlayerKill", gliderID);
}
